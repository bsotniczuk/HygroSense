<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HygroSense" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. Buttons inherit from colorPrimary -->
        <item name="colorPrimary">@color/dark_mode_gray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/dark_mode_gray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppBackground" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/dark_mode_blue</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/dark_mode_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Temperature" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fillColor">@color/white</item>
    </style>

    <style name="Theme.HygroSense.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.HygroSense.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>